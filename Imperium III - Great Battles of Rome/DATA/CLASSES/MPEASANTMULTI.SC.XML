<class id="MPeasantMulti" cpp_class="CVXScriptObj" parent="Object" entity="">

	<properties icon="gameres/icons/RPeasants.bmp"/>
	<properties help="contents/units"/>
	<properties interface="thumb,unit,holder"/>

	<value0
		icon="gameres/infobar/common/level ico.bmp"
		script="return SelAvgLevel();"
		help="/contents/stats/level"
		rollover="Level"/>

	<value1
		icon="gameres/infobar/common/stamina ico.bmp"
		script="return SelAvgStamina();"
		help="/contents/feeding"
		rollover="Stamina"/>

	<value2
		icon="gameres/infobar/common/health ico.bmp"
		script="return SelHealth() * 100 / SelMaxHealth() + '%';"
		help="/contents/feeding"
		rollover="Health"/>

	<value3
		icon="gameres/infobar/common/food ico.bmp"
		script="return SelAvgFood();"
		help="/contents/feeding"
		rollover="Food"/>

</class>
